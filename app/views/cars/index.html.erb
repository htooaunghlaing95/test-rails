<h1>All Cars</h1>
		
	<div>
		<table border="2">
			<thead>
				<tr>
					<th>Car Name</th>
					<th>Owner Name</th>	
					<th>Actions</th>
				</tr>
			</thead>
		
		<tbody>
			<% @carsOwner.each do |car| %>
				<tr>
					<td><%= car.name %></td>
					<td><%= User.find(car.user_id).username %></td>
					<td>
						<%= link_to "Show", car_path(car) %>
						<%=	link_to "Edit", edit_car_path(car) %>
						<%= link_to "Delete", car_path(car),
						method: :delete %>
					</td>
				</tr>
			<% end %>
		</tbody>
	</table>
	</div>

	<br>
	<%= link_to "Add Cars to Owners" , users_path %>
	<br>
	<%= link_to "Back" , root_path %>