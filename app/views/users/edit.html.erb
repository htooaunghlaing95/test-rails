<h1>Edit your Account</h1>

<%= form_for @user, url: {action: :update} do |form| %>
	<p>
    <%= form.label :name %> <br>
    <%= form.text_field :username %>
  </p>

  <p>
    <%= form.label :email %> <br>
    <%= form.text_field :email %>
  </p>

  <p>
    <%= form.label :password %> <br>
    <%= form.text_field :password %>
  </p>

  <p>
    <%= form.submit%>
  </p>
<% end %>

<%= link_to "Return to User Listing" , users_path %>