<h1>All Users</h1>
		
	<div>
		<table border="2">
			<thead>
				<tr>
					<th>Name</th>
					<th>Actions</th>
				</tr>
			</thead>
		
		<tbody>
			<% @users.each do |user| %>
				<tr>
					<td><%= user.username %></td>
					<td>
						<%= link_to "Show", user_path(user) %>
						<%=	link_to "Edit", edit_user_path(user) %>
						<%= link_to "Delete", user_path(user),
						method: :delete %>

						<%= link_to "Add Car", new_car_path + "?user_id=#{user.id}" %>
					</td>
				</tr>
			<%	end %>
		</tbody>
	</table>
	</div>

	<%= link_to "Create New User", new_user_path(@user) %> 
	<br>
	<%= link_to "Cars and Owner Listings", cars_path %>
	<br>
	<%= link_to "Back" , root_path %>

